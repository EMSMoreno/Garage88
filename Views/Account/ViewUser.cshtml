@model Garage88.Models.ChangeUserViewModel

@{
    ViewData["Title"] = "View User";
    Layout = "~/Views/Shared/_PasswordLayout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<style>
    img {
        filter: grayscale(50%);
        width: 100px;
        cursor: pointer;
    }

    .card {
        box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
    }
</style>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">View User</p>

                                <!-- Success Message Here -->
                                @if (TempData["Message"] != null)
                                {
                                    <div class="alert alert-success">
                                        @TempData["Message"]
                                    </div>
                                }

                                @if (this.User.IsInRole("Client") && !string.IsNullOrEmpty(Model.Nif))
                                {
                                    <div class="form-group pad">
                                        <label asp-for="Nif" class="form-label"></label>
                                        <input asp-for="Nif" class="form-control sharp" readonly />
                                    </div>
                                }

                                <div class="form-group pad">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control sharp" readonly />
                                </div>

                                <div class="form-group pad">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control sharp" readonly />
                                </div>

                                <div class="form-group pad">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control sharp" readonly />
                                </div>

                                <div class="form-group pad">
                                    <label asp-for="Address" class="form-label"></label>
                                    <input asp-for="Address" class="form-control sharp" readonly />
                                </div>

                                <div class="form-group pad">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control sharp" readonly />
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <a asp-action="Index" asp-controller="Home" class="btn sharp btn-dark" style="margin-right:10px;">Go Back to Home Screen</a>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
