@model Garage88.Models.AddUserPasswordViewModel

@{
    ViewData["Title"] = "Add Password";
    Layout = "~/Views/Shared/_PasswordLayout.cshtml";
}

<style>

    img {
        filter: grayscale(90%);
        transition: ease-in 0.4s;
    }

        img:hover {
            filter: grayscale(0%);
        }

    mark.yellow {
        color: #f7b801;
        background: none;
        font-family: Vampiro One, cursive;
    }

</style>

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">

            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="/images/siteContent/welcome.jpg" class="img-fluid imgBorder" alt="image">
            </div>

            @if (string.IsNullOrEmpty(ViewBag.Success))
            {
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>

                        <h4 style="text-align: center; margin-bottom:10%;"><mark class="yellow">Your email as been confirmed!</mark><br /><br /> To complete the proccess please add a password.</h4>

                        <div class="form-outline mb-4">
                            <span asp-validation-for="Password" class="text-warning"></span>
                            <input asp-for="Password" type="password" class="form-control sharp form-control-lg" />
                            <label asp-for="Password"></label>
                        </div>

                        <div class="form-outline mb-4">
                            <span asp-validation-for="Confirm" class="text-warning"></span>
                            <input asp-for="Confirm" type="password" class="form-control sharp form-control-lg" />
                            <label asp-for="Confirm"></label>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn sharp btn-primary btn-lg btn-block">Register Password</button>

                    </form>

                </div>
            }
            else
            {
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                    <h4 class="text-success" style="text-align: center; margin-bottom:10%;"><mark class="yellow">Thank you for creating your account!</mark><br /><br />@ViewBag.Success</h4>

                    <a asp-action="Login" asp-controller="Account" class="btn sharp btn-success btn-lg btn-block">Login</a>

                </div>
            }


        </div>
    </div>
</section>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}