@model Garage88.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
    Layout = "~/Views/Shared/_PasswordLayout.cshtml";
}

<style>
    img {
        filter: grayscale(90%);
        transition: ease-in 0.4s;
    }

        img:hover {
            filter: grayscale(0%);
        }
</style>

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">

            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-action="RecoverPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-outline mb-4">
                        <span asp-validation-for="Email" class="text-warning"></span>
                        <input asp-for="Email" class="form-control sharp form-control-lg" />
                        <label asp-for="Email" class="form-label"></label>
                    </div>
                    <!-- Submit -->
                    <button type="submit" class="btn sharp btn-primary btn-lg btn-block">Recover Password</button>
                    <!-- Back to Login -->
                    <button asp-action="Login" asp-controller="Account" class="btn sharp btn-dark btn-lg btn-block">Back to Login</button>
                </form>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
            </div>
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="/images/siteContent/jump.jpeg" class="img-fluid imgBorder" alt="Phone image">
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

