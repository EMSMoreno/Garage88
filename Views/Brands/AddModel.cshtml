@model Garage88.Models.ModelViewModel

@{
    Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    ViewData["Title"] = "Brands";
    ViewData["BreadCrumb"] = "Add Model";
}

<hr />
<h4 style="text-align:center">Add a New Model</h4>
<hr />

<div class="row" style="justify-content:center;margin-top:50px">
    <div class="col-md-4">
        <form asp-action="AddModel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BrandId" />

            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-info" />
                <a asp-action="Details" asp-route-id="@Model.BrandId" class="btn btn-success">Back to Models List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

