@model Garage88.Models.AnnouncementViewModel

@{
    //Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    Layout = "_Layout";
    ViewData["Title"] = "Announcement";
}

<div class="container" style="border: solid 1px; margin-top:50px;background-color:aliceblue">

    <form asp-action="Announcement" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row" style="margin-top:30px">
            <div class="col">
                <select asp-for="ToId" asp-items="Model.To" class="form-control"></select>
                <span asp-validation-for="ToId" class="text-danger"></span>
            </div>
        </div>

        <div class="row" style="margin-top:30px">
            <div class="col">
                <input asp-for="Subject" placeholder="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
        </div>

        <div class="row" style="margin-top:30px">
            <div class="col">
                <textarea rows="5" asp-for="Message" placeholder="Message" class="form-control"> </textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
        </div>

        <div class="row" style="margin-top:30px">
            <div class="col">
                <input asp-for="Attachment" placeholder="Attachment" class="form-control" />
            </div>
        </div>

        <div class="row" style="margin-top:30px;margin-bottom:30px;margin-left:30px">
            <div class="col">
                <input type="submit" value="Send Announcement" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}