     }

     .btnSchedule div a{
         position: relative;
         text-decoration:none;
         color: #f7b801;
         font-size:14px;
         font-weight:bold;
         padding:20px 80px;
         letter-spacing: 1px;
     }

     .btnSchedule div a:hover{
         color: #ffffff;
     }

     .img{
         left: auto;
         right: auto;
         padding: 0px;
         background: black;
         margin-left: auto;
         margin-right: auto;
         max-width:502px;
         border: solid 1px darkgrey;
         box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;

     }

     .img img{
          max-width: 500px;
          justify-content: center;
          opacity:0.5;
