    }

    .overlay-image{
        position:absolute;
        bottom:0;
        left:0;
        right:0;
        top:0;
        background-position:center;
        background-size:cover;
        opacity:0.5;
    }

    .outsideBox{

        justify-content: space-evenly;
        max-width: 1200px;
        margin-right: auto;
        margin-left: auto;
    }

    .box{
        border:solid 1px #e0e1dd;
        align-items:center;
        justify-content:center;
        padding:20px;
        margin:20px;
        text-align: center;
        max-width: 200px;
        background-color:white;
        box-shadow: 0 14px 26px rgba(0,0,0,0.04);
        z-index:1;
    }

    .box::before{
        content:"";
        width:100%;
        height:100%;
        position:absolute;
        top:0;
        left:0;
        background:linear-gradient(to left top, #f7b801,#fffc00);
        opacity:0;
        visibility:hidden;
        transition:all 0.5s;
        z-index: -1;
    }

    .box:hover img{
        transform:scale(1.2);
        transition:linear 0.3s;
    }

    .box:hover a{
        color:black;
    }

    .box:hover::before{
        opacity:1;
        visibility:visible;
    }

    hr{
        color:transparent;
        box-shadow:1px 1px 5px -1px rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
        max-width:1000px;
    }

    button{
        all:unset;
        position:relative;
        cursor:pointer;
    }


     .btnServices div{
         position: relative;
         display: inline-block;
         overflow: hidden;
         width:auto;
         height: auto;
         padding:15px 0;
         background: #ff4655;
         transition:ease-in 0.5s;
     }


     .btnServices:hover div{
         background: #353535;
     }

     .btnServices div a{
         position: relative;
         text-decoration:none;
         color: #ffffff;
         font-size:14px;
         font-weight:bold;
         padding:20px 80px;
         letter-spacing: 1px;
     }

     .btnServices div a:hover{
