@model Garage88.Models.AddClientAndVehicleToEstimateViewModel

@{
    Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    ViewData["Title"] = "Estimates";
    ViewData["BreadCrumb"] = "Select Vehicle";
}

<h4 style="text-align:center">Select the Vehicle you wish to make an estimate for</h4>
<hr />

<div>
    <form asp-action="SelectVehicle" style="max-width:20%;margin-left: auto;margin-right: auto;margin-top: 50px">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ClientId" />


        <div class="form-group">
            <select asp-for="VehicleId" asp-items="Model.Vehicles" class="form-control"></select>
            <span asp-validation-for="VehicleId" class="text-danger"></span>
        </div>

        <div class="form-group" style="text-align:end">
            <input type="submit" value="Next" class="btn btn-primary" />
        </div>
    </form>

</div>