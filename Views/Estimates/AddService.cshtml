@model Garage88.Models.AddServiceToEstimateViewModel

@{
    Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    ViewData["Title"] = "Estimate";
    ViewData["BreadCrumb"] = "Add Service";
}

<hr />
<h4 style="text-align:center">Add a service</h4>
<hr />
<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <form asp-action="AddService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="VehicleId" />
            <input type="hidden" asp-for="IsEdit" />
            <input type="hidden" asp-for="EstimateId" />

            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" asp-items="Model.Services" class="form-control"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Service" class="btn btn-info" />
                @if (Model.IsEdit == false)
                {
                    <a asp-action="Create" asp-route-id="@Model.VehicleId" class="btn btn-success">Back to List</a>
                }
                else
                {
                    <a asp-action="Edit" asp-route-id="@Model.VehicleId" asp-route-isNew="false" class="btn btn-success">Back to List</a>
                }

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
