@model Garage88.Models.SpecialityViewModel

@{
    // Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    Layout = "_Layout";
    ViewData["Title"] = "Mechanics";
    ViewData["BreadCrumb"] = "Add Speciality";
}

<hr />
<h4 style="text-align:center">Add a new specialty</h4>
<hr />
<div class="row" style="justify-content:center">
    <div class="col-md-4">
        <form asp-action="AddSpeciality">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-info" />
                <a asp-action="RoleDetails" asp-route-id="@Model.RoleId" class="btn btn-success">Back to specialties List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
