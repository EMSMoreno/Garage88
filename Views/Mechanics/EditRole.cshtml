@model Garage88.Models.RoleViewModel

@{
    //Layout = "~/Views/Shared/_LayoutDashboardPanel.cshtml";
    Layout = "_Layout";
    ViewData["Title"] = "Mechanics";
    ViewData["BreadCrumb"] = "Edit Role";
}

<h4 style="text-align:center">Edit @Model.Name </h4>
<hr />
<div class="row" style="justify-content:center">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="RoleId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedPermission" class="control-label"></label>
                <select asp-for="SelectedPermission" asp-items="Model.Permissions" class="form-control"></select>
                <span asp-validation-for="SelectedPermission" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" style="width:100%" value="Save Role" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
